<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sportsnewsforcrazysportpepllatestnewsjstwaao.com.sportsnews.fragments.Fragment_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxHeight="250dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="22sp"
                android:text="Title Of Stuffs"/>


            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewTitle"
                android:text="Description Of Stuffs..Description Of Stuffs.."/>

            <TextView
                android:id="@+id/textViewImageLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewDescription"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#7a5bff"
                android:padding="10dp"
                android:text="Imagelink Of Stuffs"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
